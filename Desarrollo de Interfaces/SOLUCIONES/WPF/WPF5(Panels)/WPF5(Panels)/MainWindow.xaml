        <Button Width="100" Height="50" 
            Background ="AliceBlue" FontFamily="Arial" 
            FontSize="20" FontWeight="Bold">
            Cancelar
        </Button>
        <Button Width="100" Height="50" 
            Background ="AliceBlue" FontFamily="Arial" 
            FontSize="20" FontWeight="Bold">
           Omitir
        </Button>

    </StackPanel>


</Window>
