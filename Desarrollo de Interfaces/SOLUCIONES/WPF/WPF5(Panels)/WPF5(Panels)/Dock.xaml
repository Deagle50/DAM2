<Window x:Class="Dock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF5_Panels_"
        mc:Ignorable="d"
        Title="Dock" Height="300" Width="547.194">
    <DockPanel>
        <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="30" Background="Blue" Foreground="White">IMAGEN</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" FontSize="10" HorizontalAlignment="Center" Text="{Binding Path=Source,ElementName=foto}"></TextBlock>
        <Button DockPanel.Dock="Left" Width="50" Height="50" 
            Background ="CornflowerBlue" FontFamily="Webdings" 
            FontSize="20" FontWeight="Bold" 
            Foreground="White" Margin="10,0,0,0">
        9
    </Button>

    <Button DockPanel.Dock="Right" Width="50" Height="50" 
            Background ="CornflowerBlue" FontFamily="Webdings" 
            FontSize="20" FontWeight="Bold" 
            Foreground="White" Margin="0,0,10,0">
       :
    </Button>
    <Image Name="foto"  Source="foto.jpg" Margin="10" ></Image>
        
    </DockPanel>
</Window>
