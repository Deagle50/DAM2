<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Combobox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="Combo" HorizontalAlignment="Left" Margin="36,48,0,0" VerticalAlignment="Top" Width="212" Height="26">
            <TextBlock>UNO</TextBlock>
            <TextBlock>DOS</TextBlock>
            <TextBlock>TRES</TextBlock>
        </ComboBox>
        <TextBlock Text="{Binding ElementName=Combo,Path=SelectedItem.Text}" Margin="332,28,249.333,327.667"></TextBlock>
        
    </Grid>
</Window>
