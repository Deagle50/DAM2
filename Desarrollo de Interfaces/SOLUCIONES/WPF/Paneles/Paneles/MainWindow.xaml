<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paneles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Name="Panel1">

        <Button Width="100" Height="50" 

            Background ="AliceBlue" FontFamily="Arial" 

            FontSize="20" FontWeight="Bold" Content="{Binding Boton1}">

            

        </Button>

        <Button Width="100" Height="50" 

            Background ="AliceBlue" FontFamily="Arial" 

            FontSize="20" FontWeight="Bold" Content="{Binding Boton2}">

            

        </Button>

        <Button Width="100" Height="50" 

            Background ="AliceBlue" FontFamily="Arial" 

            FontSize="20" FontWeight="Bold"  Content="{Binding Boton3}">

           

        </Button>

    </StackPanel>

</Window>
