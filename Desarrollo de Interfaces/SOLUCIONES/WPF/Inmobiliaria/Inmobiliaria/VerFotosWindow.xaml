<Window x:Class="VerFotosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inmobiliaria"
        mc:Ignorable="d"
        Title="VerFotosWindow" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid Name="Grid1">
        <Image Source="{Binding Foto}" HorizontalAlignment="Left" Height="176" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBlock Text="{Binding PosicionActual}" HorizontalAlignment="Left" Height="18" Margin="54,209,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="57"/>
        <TextBlock HorizontalAlignment="Left" Margin="131,209,0,0" TextWrapping="Wrap" Text="/" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding TotalFotos}" HorizontalAlignment="Left" Height="18" Margin="147,207,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="57"/>
        <Button Content="Anterior" HorizontalAlignment="Left" Margin="16,239,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Siguiente" HorizontalAlignment="Left" Margin="192,239,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
