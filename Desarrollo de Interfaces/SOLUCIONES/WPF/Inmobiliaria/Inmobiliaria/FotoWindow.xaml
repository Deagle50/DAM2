<Window x:Class="FotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inmobiliaria"
        mc:Ignorable="d"
        Title="FotoWindow" Height="300" Width="373.469" Loaded="Window_Loaded">
    <Grid Name="grid1">
        <Image Source="{Binding Foto}" HorizontalAlignment="Left" Height="170" Margin="10,16,0,0" VerticalAlignment="Top" Width="265"/>
        <Label Content="Descripcion" HorizontalAlignment="Left" Margin="17,203,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Descripcion}" x:Name="txtDescripcion" HorizontalAlignment="Left" Height="23" Margin="25,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Agregar" HorizontalAlignment="Left" Height="23" Margin="161,229,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_1"/>
        <Button Content="Buscar" HorizontalAlignment="Left" Height="23" Margin="295,148,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click"/>

    </Grid>
</Window>
