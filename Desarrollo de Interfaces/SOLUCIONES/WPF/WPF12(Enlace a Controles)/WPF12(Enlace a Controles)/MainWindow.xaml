<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF12_Enlace_a_Controles_"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtTexto" HorizontalAlignment="Left" Height="23" Margin="32,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="txtDestino" Text="{Binding ElementName=txtTexto, Path=Text}" HorizontalAlignment="Left" Margin="259,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="145"/>
        
    </Grid>
</Window>
