<Window x:Class="Anuncios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAnuncios"
        mc:Ignorable="d"
        Title="Anuncios" Height="450" Width="800">
    <Grid x:Name="Grid1">
        <Label Content="{Binding Anunciante.Marca}" HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Width="261" Height="41"/>
        <TextBlock HorizontalAlignment="Left" Margin="420,16,0,0" TextWrapping="Wrap" Text="{Binding AnuncioActual.Slogan}" VerticalAlignment="Top" Height="35" Width="331"/>
        <Image Source="{Binding AnuncioActual.Foto}" HorizontalAlignment="Left" Height="250" Margin="168,90,0,0" VerticalAlignment="Top" Width="440"/>
        <Button Content="Anterior" HorizontalAlignment="Left" Margin="138,370,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Siguiente" HorizontalAlignment="Left" Margin="261,370,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="401,370,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>

    </Grid>
</Window>
