<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversorMonedas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grid1">
        <Label Content="Euros" HorizontalAlignment="Left" Margin="41,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.482,-0.556" Width="44"/>
        <Label Content="Dólares" HorizontalAlignment="Left" Margin="41,186,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.482,-0.556" Width="52"/>
        <TextBox x:Name="txtEuros" Text="{Binding Euro}" HorizontalAlignment="Left" Height="23" Margin="41,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDolar" Text="{Binding Dolar}" HorizontalAlignment="Left" Height="23" Margin="41,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" UndoLimit="103"/>

    </Grid>
</Window>
