<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDesarrolladores"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            android:text="Desarrollado por:"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDesarrolladores2"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:text="Kulentxo y Urko"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDesarrolladores" />

        <TextView
            android:id="@+id/txtAportes"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="50dp"
            android:text="Aportes:"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDesarrolladores2" />

        <TextView
            android:id="@+id/txtAportes2"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:text="lllibailll, Cynda3"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAportes" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="45dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:text="V.0.5.1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtChangelog"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="50dp"
            android:text="Changelog"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAportes2" />

        <TextView
            android:id="@+id/txtChangelog0.1"
            android:layout_width="216dp"
            android:layout_height="21dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:clickable="false"
            android:inputType="textMultiLine"
            android:text="0.1: Versión inicial"
            android:textAlignment="center"
            android:textIsSelectable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog" />

        <TextView
            android:id="@+id/txtChangelog05"
            android:layout_width="216dp"
            android:layout_height="21dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="105dp"
            android:clickable="false"
            android:inputType="textMultiLine"
            android:text="0.5: Añadido icono de aplicación"
            android:textAlignment="center"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog0.4" />

        <TextView
            android:id="@+id/txtChangelog2"
            android:layout_width="216dp"
            android:layout_height="21dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="105dp"
            android:clickable="false"
            android:inputType="textMultiLine"
            android:text="0.5.1: Optimización"
            android:textAlignment="center"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog05" />

        <TextView
            android:id="@+id/txtChangelog0.2"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:text="0.2: Añadidas nuevas frases"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog0.1" />

        <TextView
            android:id="@+id/txtChangelog0.3"
            android:layout_width="216dp"
            android:layout_height="71dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:text="0.3: Se ha quitado el botón atrás, y cambiado la fuente del bocadillo. Mensaje en el bocadillo centrado"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog0.2" />

        <TextView
            android:id="@+id/txtChangelog0.4"
            android:layout_width="216dp"
            android:layout_height="70dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="105dp"
            android:text="0.4: Reducido el tamaño de la aplicación, optimización de rendimiento, mejora en diseño, añadidas validaciones"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtChangelog0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>